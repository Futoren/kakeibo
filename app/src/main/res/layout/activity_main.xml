<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/firstChild"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_camera" />
        <Button
            android:id="@+id/button_capture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="@string/capture" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondChild"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/firstChild"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="0.2"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/capture_value_label"
            android:layout_weight="0.5"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/capture_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="@string/capture_value"
            android:textSize="30sp"/>
    </LinearLayout>
        <Button
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:text="@string/add_value" />
    </LinearLayout>

    <EditText
        android:id="@+id/editLimit"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/secondChild"
        android:text="@string/limit_value" />

    <LinearLayout
        android:id="@+id/thirdChild"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/editLimit"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="0.2"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/limit_value_label"
                android:layout_weight="0.5"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/limit_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/limit_value"
                android:layout_weight="0.2"
                android:textSize="30sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/set_limit"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:text="@string/set_value" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forthChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thirdChild"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="0.5"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/sum_value_label"
            android:layout_weight="0.5"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/sum_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="@string/sum_value"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="0.5"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/check_value_label"
            android:layout_weight="0.5"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/check_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="@string/check_value"
            android:textSize="30sp"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>